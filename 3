fun CompetitionCategoriesScreen() {
    Column(
        modifier = Modifier
            .fillMaxSize()
            .padding(16.dp)
    ) {
        Text(
            text = "Категории соревнований:",
            fontSize = 24.sp,
            fontWeight = FontWeight.Bold
        )
        Text(
            text = "• Помещение",
            fontSize = 18.sp,
            modifier = Modifier.padding(top = 8.dp)
        )
        Text(
            text = "• Местность",
            fontSize = 18.sp,
            modifier = Modifier.padding(top = 4.dp)
        )
        Text(
            text = "• Транспорт",
            fontSize = 18.sp,
            modifier = Modifier.padding(top = 4.dp)
        )
        Text(
            text = "• Предметы",
            fontSize = 18.sp,
            modifier = Modifier.padding(top = 4.dp)
        )
    }
}

@Preview(showBackground = true)
@Composable
fun DefaultPreview() {
    CompetitionAppTheme {
