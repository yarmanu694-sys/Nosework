<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.competitionapp">
/</manifest>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.my">

        <!-- Главная активность -->
        <activity
            android:name=".cpca"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Активность сессии -->
        <activity android:name=".CompetitionSessionActivity" />

        <!-- Активность просмотра результатов -->
        <activity android:name=".ResultsViewerActivity" />

        <!-- Остальные активности (если есть) -->
        <activity android:name=".MainActivity" />

    </application>
